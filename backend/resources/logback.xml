<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="trace">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>

    <!-- This disables the logs for the pool creation and updating, disable this if we want to see those.. -->
    <logger name="com.zaxxer.hikari.pool.PoolBase" level="OFF"/>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="OFF"/>
    <logger name="com.zaxxer.hikari.HikariDataSource" level="OFF"/>
    <logger name="com.zaxxer.hikari.HikariConfig" level="OFF"/>
    <logger name="com.zaxxer.hikari.util.DriverDataSource" level="OFF"/>
</configuration>
